<Page
    x:Class="SnapCaption.CaptionPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:SnapCaption"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:ui="http://schemas.lepo.co/wpfui/2022/xaml"
    Title="CaptionPage"
    JournalEntry.KeepAlive="True"
    mc:Ignorable="d">

    <Grid Margin="5,5,15,5">
        <Grid.RowDefinitions>
            <RowDefinition x:Name="OriginalCaption_Row" Height="75" />
            <RowDefinition x:Name="CaptionLogCard_Row" Height="400" />
            <RowDefinition x:Name="TranslatedCaption_Row" Height="75" />
        </Grid.RowDefinitions>

        <ui:Card
            Grid.Row="0"
            Padding="8"
            VerticalAlignment="Center">
            <TextBlock
                x:Name="OriginalCaption"
                Background="Transparent"
                FontSize="18"
                TextWrapping="Wrap"
                TextAlignment="Left"
                VerticalAlignment="Center"
                Text="{Binding DisplayOriginalCaption, UpdateSourceTrigger=PropertyChanged}"
                MaxHeight="65"
                LineHeight="30"
                LineStackingStrategy="BlockLineHeight" />
        </ui:Card>

        <ui:Card
            x:Name="CaptionLogCard"
            Grid.Row="1"
            Height="400"
            Margin="0,3,0,3"
            Padding="8"
            VerticalAlignment="Stretch"
            Background="Transparent"
            BorderBrush="#00000000">
            <TextBox
                x:Name="HistoryTextBox"
                Height="384"
                Text="{Binding AccumulatedHistory, Mode=OneWay, UpdateSourceTrigger=PropertyChanged}"
                TextWrapping="Wrap"
                VerticalScrollBarVisibility="Auto"
                HorizontalScrollBarVisibility="Disabled"
                IsReadOnly="True"
                Focusable="False"
                BorderThickness="0"
                Background="Transparent"
                FontSize="18"
                Padding="4"
                VerticalContentAlignment="Bottom"
                AcceptsReturn="True"
                Cursor="Arrow">
                <TextBox.Style>
                    <Style TargetType="TextBox">
                        <Setter Property="OverridesDefaultStyle" Value="True" />
                        <Setter Property="Background" Value="Transparent" />
                        <Setter Property="BorderBrush" Value="Transparent" />
                        <Setter Property="BorderThickness" Value="0" />
                        <Setter Property="Template">
                            <Setter.Value>
                                <ControlTemplate TargetType="TextBox">
                                    <ScrollViewer
                                        x:Name="PART_ContentHost"
                                        Background="{TemplateBinding Background}" />
                                </ControlTemplate>
                            </Setter.Value>
                        </Setter>
                        <Style.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="Transparent" />
                                <Setter Property="BorderBrush" Value="Transparent" />
                            </Trigger>
                            <Trigger Property="IsKeyboardFocusWithin" Value="True">
                                <Setter Property="Background" Value="Transparent" />
                                <Setter Property="BorderBrush" Value="Transparent" />
                            </Trigger>
                        </Style.Triggers>
                    </Style>
                </TextBox.Style>
            </TextBox>
        </ui:Card>

        <ui:Card
            Grid.Row="2"
            Height="75"
            Margin="0,0,0,0"
            Padding="8"
            VerticalAlignment="Center">
            <TextBlock
                x:Name="TranslatedCaption"
                Background="Transparent"
                FontSize="18"
                TextWrapping="Wrap"
                TextAlignment="Left"
                VerticalAlignment="Center"
                Text="{Binding DisplayTranslatedCaption, UpdateSourceTrigger=PropertyChanged}"
                MaxHeight="65"
                LineHeight="30"
                LineStackingStrategy="BlockLineHeight" />
        </ui:Card>

    </Grid>
</Page>
